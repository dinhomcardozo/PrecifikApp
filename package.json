{
  "name": "precifikapp",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "curl -L https://github.com/tailwindlabs/tailwindcss/releases/download/v4.1.11/tailwindcss-linux-x64 -o ./node_modules/.bin/tailwindcss && chmod +x ./node_modules/.bin/tailwindcss",
    "build:css": "tailwindcss -i app/assets/stylesheets/application.css --output app/assets/builds/application.css --minify",
    "dev:css":   "tailwindcss -i app/assets/stylesheets/application.css --output app/assets/builds/application.css --watch",
    "build:js": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds",
    "build": "npm run build:js && npm run build:css",
    "dev:js": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --watch",
    "dev": "npm-run-all --parallel dev:js dev:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-import": "^14.1.0"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@rails/activestorage": "^8.0.200",
    "flatpickr": "^4.6.13"
  }
}
