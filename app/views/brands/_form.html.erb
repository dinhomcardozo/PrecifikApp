<%= form_with(model: brand, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Nome da Marca" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :main_brand, class: "form-check-input" %>
    <%= f.label :main_brand, "Marca Principal?", class: "form-check-label" %>
  </div>
  
  <div>
    <%= f.submit class: "standart-button" %>
  </div>
<% end %>