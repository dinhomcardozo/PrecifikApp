<div class="modal fade" id="newBrandModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Nova Marca</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body">
      
        <%= form_with(model: Brand.new, url: brands_path, data: { turbo_stream: true }) do |f| %>
          <div class="mb-3">
            <%= f.label :name, "Nome da Marca", class: "custom-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :main_brand, class: "form-check-input" %>
            <%= f.label :main_brand, "Marca Principal", class: "custom-label" %>
          </div>

          <%= f.submit "Salvar", class: "action-button" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
