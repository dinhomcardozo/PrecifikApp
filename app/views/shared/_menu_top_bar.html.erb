<div class="menu-top-bar">
  <% if user_client_signed_in? %>

    <span class="top-bar-item">
      Seja bem-vindo ao Maxximiza, 
      <strong><%= current_user_client.first_name %>!    |     </strong>
    </span>
    <span class="top-bar-item">
      <%= button_to 'SAIR', destroy_user_client_session_path, method: :delete, class: "login-links" %>
    </span>
    <span class="top-bar-item">
      <%= link_to messages_path, class: "icon-link messages", title: "Mensagens" do %>
      <% end %>
    </span>

    <span class="top-bar-item">
      <%= link_to settings_path, class: "icon-link settings", title: "Configurações" do %>
      <% end %>
    </span>
  <% else %>
    <span class="top-bar-item">
      <%= link_to 'ENTRAR',
                  new_user_client_session_path,
                  class: 'login-link' %>
    </span>
    <span class="top-bar-item">
      <%= link_to 'CADASTRAR',
                  new_user_client_registration_path,
                  class: 'signup-link' %>
    </span>
  <% end %>
</div>
