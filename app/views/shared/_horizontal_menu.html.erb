<div class="menu-horizontal">
  <a href="<%= clients_root_path %>" class="logo-link">
    <%= image_tag("logo-maxximiza_negativa_oficial.png", width: 120, alt: "Logo MaxximizaApp") %>
  </a>
  <div>
    <%= link_to "Dashboards", dashboards_overview_path, class: "menu-item" %>
  </div>

  <!-- Dropdown Serviços -->
  <div data-controller="dropdown" class="menu-item dropdown">
    <!-- Botão dispara o toggle -->
    <button data-action="click->dropdown#toggle"
            class="dropdown-toggle"
            aria-expanded="false">
      Serviços
      <svg class="chevron" width="10" height="6" …></svg>
    </button>
      <div data-dropdown-target="menu" class="dropdown-menu">
        <%= link_to "Todos os Serviços", clients_services_services_path, class: "dropdown-item" %>
        <%= link_to "Energias",          clients_services_energies_path, class: "dropdown-item" %>
        <%= link_to "Equipamentos",      clients_services_equipments_path, class: "dropdown-item" %>
        <%= link_to "Profissionais",     clients_services_professionals_path, class: "dropdown-item" %>
        <%= link_to "Funções",           clients_services_roles_path, class: "dropdown-item" %>
      </div>
  </div>

    <!-- Dropdown Cadastros -->
  <div data-controller="dropdown" class="menu-item dropdown">
    <!-- Botão dispara o toggle -->
    <button data-action="click->dropdown#toggle"
            class="dropdown-toggle"
            aria-expanded="false">
      Produtos
      <svg class="chevron" width="10" height="6" …></svg>
    </button>
    <!-- Menu que será mostrado/ocultado -->
    <div data-dropdown-target="menu" class="dropdown-menu">
      <%= link_to "Produtos", products_path, class: "dropdown-item" %>
      <%= link_to "Subprodutos", subproducts_path, class: "dropdown-item" %>
      <%= link_to "Insumos", inputs_path, class: "dropdown-item" %>
    </div>
  </div>

  <!-- Dropdown Simulador de Produção -->
  <div data-controller="dropdown" class="menu-item dropdown">
    <button data-action="click->dropdown#toggle"
            class="dropdown-toggle"
            aria-expanded="false">
      Simulador de Produção
      <svg class="chevron" width="10" height="6"></svg>
    </button>
    <div data-dropdown-target="menu" class="dropdown-menu">
      <%= link_to "Simulações", production_simulations_path, class: "dropdown-item" %>
      <%= link_to "Nova Simulação", new_production_simulation_path, class: "dropdown-item" %>
    </div>
  </div>

    <!-- Dropdown Cadastros -->
  <div data-controller="dropdown" class="menu-item dropdown">
    <!-- Botão dispara o toggle -->
    <button data-action="click->dropdown#toggle"
            class="dropdown-toggle"
            aria-expanded="false">
      Cadastros
      <svg class="chevron" width="10" height="6" …></svg>
    </button>
    <!-- Menu que será mostrado/ocultado -->
    <div data-dropdown-target="menu" class="dropdown-menu">
      <%= link_to "Metas de Vendas", sales_targets_path, class: "dropdown-item" %>
      <%= link_to "Tributos", taxes_path, class: "dropdown-item" %>
      <%= link_to "Custos Fixos", fixed_costs_path, class: "dropdown-item" %>
      <%= link_to "Marcas", brands_path, class: "dropdown-item" %>
      <%= link_to "Tipos de Insumo", input_types_path, class: "dropdown-item" %>
      <%= link_to "Categorias", categories_path, class: "dropdown-item" %>
      <%= link_to "Fornecedores", suppliers_path, class: "dropdown-item" %>
    </div>
  </div>

  <div>
        <%= link_to "Configurações", settings_path, class: "menu-item" %>
  </div>
</div>