<div class="menu-horizontal">
  <a href="/" class="logo-link">
    <%= image_tag("logo-maxximiza_negativa_oficial.png", width: 120, alt: "Logo MaxximizaApp") %>
  </a>

  <!-- Dropdown Serviços -->
  <div data-controller="dropdown" class="menu-item dropdown">
    <!-- Botão dispara o toggle -->
    <button data-action="click->dropdown#toggle"
            class="dropdown-toggle"
            aria-expanded="false">
      Serviços
      <svg class="chevron" width="10" height="6" …></svg>
    </button>
    <!-- Menu que será mostrado/ocultado -->
    <div data-dropdown-target="menu" class="dropdown-menu">
      <%= link_to "Services", services_services_path, class: "dropdown-item" %>
      <%= link_to "Equipments", services_equipments_path, class: "dropdown-item" %>
      <%= link_to "Roles", services_roles_path, class: "dropdown-item" %>
      <%= link_to "Professionals", services_professionals_path, class: "dropdown-item" %>
      <%= link_to "Energies",  services_energies_path, class: "dropdown-item" %>
    </div>
  </div>

  <%= link_to "Produtos", products_path, class: "menu-item" %>
  <%= link_to "Subprodutos", subproducts_path, class: "menu-item" %>
  <%= link_to "Insumos", inputs_path, class: "menu-item" %>
</div>

<div class="submenu-horizontal">
  <%= link_to "Metas", sales_targets_path, class: "submenu-item" %>
  <%= link_to "Tributos", taxes_path, class: "submenu-item" %>
  <%= link_to "Custos", fixed_costs_path, class: "submenu-item" %>
  <%= link_to "Marcas", brands_path, class: "submenu-item" %>
  <%= link_to "Tipos de Insumo", input_types_path, class: "submenu-item" %>
  <%= link_to "Fornecedores", suppliers_path, class: "submenu-item" %>
</div>