<div id="<%= dom_id package %>">
  <p>
    <strong>Nome:</strong>
    <%= package. description %>
  </p>

  <p>
    <strong>Marca:</strong>
    <%= package. brand_id %>
  </p>

  <p>
    <strong>Canal de Venda:</strong>
    <%= package. channel_id %>
  </p>

  <p>
    <strong>Peso total:</strong>
    <%= package. total_weight %>
  </p>

  <p>
    <strong>Desconto geral:</strong>
    <%= package. general_discount %>
  </p>

  <p>
    <strong>Preço subtotal:</strong>
    <%= package. subtotal_price %>
  </p>

  <p>
    <strong>Preço total:</strong>
    <%= package. total_price %>
  </p>

  <p>
    <strong>Preço final:</strong>
    <%= package. final_price %>
  </p>

</div>
