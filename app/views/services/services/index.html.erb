<main class="index-container">
  <h1 class="title" >Listagem de Serviços</h1>

  <div>
    <%= link_to "[+] Criar Serviço", new_clients_services_service_path, class: "action-button" %>
  </div>

  <table class="index-table--bordered" >
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Cargo</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.description %></td>
          <td><%= service.role.description %></td>
          <td><%= link_to "Mostrar", clients_services_service_path(service), class: "action-button" %></td>
          <td><%= link_to "Editar", edit_clients_services_service_path(service), class: "action-button" %></td>

          <td>
            <%= link_to "Apagar",
                        clients_services_service_path(service),
                        data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" },
                        class: "action-button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>