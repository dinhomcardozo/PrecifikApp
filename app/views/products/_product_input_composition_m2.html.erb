<tr data-controller="composition-row" data-type="input" data-unit="m2">
  <td>
    <%= f.collection_select :input_id,
          Input.order(:name),
          :id, :name,
          { prompt: "Selecione Input" },
          class: "form-select" %>
  </td>
  <td>
    <%= f.number_field :quantity,
          step: "any",
          placeholder: "Área (m²)",
          class: "form-control",
          data: { action: "input->composition-row#calculate" } %>
  </td>
  <td>
    <%= f.number_field :cost,
          step: "any",
          readonly: true,
          class: "form-control" %>
  </td>
  <td>
    <%= f.number_field :weight,
          step: "any",
          readonly: true,
          class: "form-control" %>
  </td>
  <td>
    <%= f.hidden_field :_destroy, class: "destroy-flag" %>
    <button type="button" class="mini-button"
            data-action="composition-row#removeRow">Remover</button>
  </td>
</tr>