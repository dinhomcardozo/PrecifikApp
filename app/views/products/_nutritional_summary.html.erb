<h4>Tabela Nutricional (total do produto)</h4>
<table class="index-table index-table--bordered">
  <thead>
    <tr>
      <th>Calorias (kcal)</th>
      <th>Gorduras totais (g)</th>
      <th>Proteínas (g)</th>
      <th>Carboidratos (g)</th>
      <th>Fibras (g)</th>
      <th>Açúcares (g)</th>
      <th>Sódio (mg)</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @nutritional_summary[:calories] %></td>
      <td><%= @nutritional_summary[:total_fat] %></td>
      <td><%= @nutritional_summary[:protein] %></td>
      <td><%= @nutritional_summary[:carbs] %></td>
      <td><%= @nutritional_summary[:dietary_fiber] %></td>
      <td><%= @nutritional_summary[:sugars] %></td>
      <td><%= @nutritional_summary[:sodium] %></td>
    </tr>
  </tbody>
</table>

<section>
  <table class="vertical-table--bordered" >
    <tr>
      <th>Peso final (g) (com perda):</th>
      <td><%= @product.final_weight %> g</td>
    </tr>
    <tr>
      <th>Calorias por grama (antes perda):</th>
      <td><%= @product.calories_per_gram_before_loss.round(2) %> kcal/g</td>
    </tr>
    <tr>
      <th>Calorias por grama (após perda):</th>
      <td><%= @product.calories_per_gram_after_loss.round(2) %> kcal/g</td>
    </tr>
  </table>
</section>