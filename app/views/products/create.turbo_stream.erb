<!-- app/views/products/create.turbo_stream.erb -->
<%= turbo_stream.replace "product_steps" do %>
  <%= turbo_frame_tag "product_steps" do %>
    <%= render "steps",
          product:    @product,
          active_tab: @next_tab %>
  <% end %>
<% end %>

<%= turbo_stream.prepend "flash" do %>
  <div class="alert alert-success">Produto criado com sucesso</div>
<% end %>