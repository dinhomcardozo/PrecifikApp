<div id="product-configurations">
  <h3>Configurações do Produto</h3>
  <div><%= f.label :description, "Produto Nome" %>
       <%= f.text_field :description, required: true %></div>
  <div><%= f.label :brand_id, "Marca" %>
       <%= f.collection_select :brand_id, Brand.all, :id, :name,
           { prompt: "Selecione" }, { required: true } %></div>
  <div><%= f.label :weight, "Peso (g)" %>
       <%= f.number_field :weight, required: true %></div>
  <div><%= f.label :profit_margin_wholesale, "Margem Atacado (%)" %>
       <%= f.number_field :profit_margin_wholesale, step: "any", required: true %></div>
  <div><%= f.label :profit_margin_retail, "Margem Varejo (%)" %>
       <%= f.number_field :profit_margin_retail, step: "any", required: true %></div>
</div>
