<main class="index-container">
  <h1 class="title">Listas de Preços</h1>

  <%= link_to "Nova Lista de Preços", new_sales_price_list_path, class: "standart-button" %>

  <table class="index-table index-table--bordered">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Ativa?</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @price_lists.each do |pl| %>
        <tr>
          <td><%= pl.description %></td>
          <td><%= pl.active? ? "Sim" : "Não" %></td>
          <td>
            <%= link_to "Editar", edit_sales_price_list_path(pl), class: "action-button" %>
            <%= link_to "Excluir", sales_price_list_path(pl), method: :delete, data: { confirm: "Tem certeza?" }, class: "action-button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>