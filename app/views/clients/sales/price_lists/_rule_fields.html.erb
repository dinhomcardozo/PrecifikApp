<div class="rule-fields">
  <div class="fields">
    <%= f.label :initial_quantity, "De" %>
    <%= f.number_field :initial_quantity, step: 1, class: "form-control",
          data: { action: "input->price-list#validateIntervals" } %>
  </div>

  <div class="fields">
    <%= f.label :final_quantity, "AtÃ©" %>
    <%= f.number_field :final_quantity, step: 1, class: "form-control",
          data: { action: "input->price-list#validateIntervals" } %>
  </div>

  <div class="fields">
    <%= f.label :discount_type, "Tipo de Desconto" %>
    <%= f.select :discount_type, [["%", "percent"], ["R$", "amount"]], {}, class: "form-control" %>
  </div>

  <div class="fields">
    <%= f.label :discount_value, "Valor do Desconto" %>
    <%= f.number_field :discount_value, step: 0.01, class: "form-control" %>
  </div>

  <%= f.hidden_field :_destroy %>
  <div class="fields">
    <%= button_tag type: "button",
                   data: { action: "price-list#removeRule" },
                   class: "remove-btn-fields" do %>
      <%= image_tag "icons/excluir.png", alt: "Remover", class: "icon-delete-fields" %>
    <% end %>
  </div>
</div>