<main class="index-container">
  <h2>Mensagens</h2>

  <ul class="divide-y divide-gray-200">
    <% @messages.each do |message| %>
      <% read = message.read_by?(current_user_client.client) %>
      <li class="py-3 flex justify-between items-center">
        <div>
          <%= link_to message.title, message_path(message), class: (read ? "text-gray-500" : "text-black font-bold") %>
          <p class="text-sm text-gray-600"><%= truncate(strip_tags(message.body), length: 80) %></p>
        </div>
        <span class="text-xs <%= read ? 'text-green-600' : 'text-red-600' %>">
          <%= read ? "Lido" : "NÃ£o lido" %>
        </span>
      </li>
    <% end %>
  </ul>
</main>