<div class="banner-carousel mb-4" style="max-width: 1200px; margin: 0 auto;">
  <div id="dashboardCarousel"
       class="carousel slide"
       data-bs-ride="carousel"
       data-bs-interval="<%= @banners.first&.interval || 5000 %>">

    <!-- Apenas indicadores (dots) -->
    <div class="carousel-indicators">
      <% @banners.each_with_index do |banner, idx| %>
        <button type="button"
                data-bs-target="#dashboardCarousel"
                data-bs-slide-to="<%= idx %>"
                class="<%= 'active' if idx.zero? %>"
                aria-current="<%= 'true' if idx.zero? %>"
                aria-label="Slide <%= idx + 1 %>"></button>
      <% end %>
    </div>

    <!-- Ajuste da altura para 180px -->
    <div class="carousel-inner" style="height: 180px;">
      <% @banners.each_with_index do |banner, idx| %>
        <div class="carousel-item <%= 'active' if idx.zero? %>"
             data-bs-interval="<%= banner.interval %>">
          <%= link_to banner.link, target: "_blank", rel: "noopener" do %>
            <%= image_tag banner.image,
                          alt: "Banner #{idx+1}",
                          class: "d-block w-100 h-100",
                          style: "object-fit:cover;" %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const el = document.querySelector('#dashboardCarousel');
    if (el) {
      // O data-bs-interval no root e em cada item já cuidam da velocidade
      // não é necessário inicializar manualmente se você já incluiu data-bs-ride="carousel"
    }
  });
</script>