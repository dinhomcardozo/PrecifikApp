<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome", style: "display: block", class: "custom-label" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit "Salvar", class: "action-button" %>
  </div>
<% end %>

<%# Exibição dos dados quando a categoria já existe %>
<% if category.persisted? %>
  <hr>
  <p><strong>Nome:</strong> <%= category.name %></p>
<% end %>