<!-- app/views/sales_targets/index.html.erb -->

<main class="index-container">
  <h1>Metas de Vendas</h1>
  <%= link_to "[+] Criar Meta de Venda",
              new_sales_target_path,
              class: "standart-button" %>

  <table class="index-table index-table--bordered" >
    <thead>
      <tr>
        <th>Produto</th>
        <th>Meta Mensal</th>
        <th>Data Inicial</th>
        <th>Data Final</th>
        <th>Ações</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody>
      <% @sales_targets.each do |sales_target| %>
        <tr id="<%= dom_id sales_target %>">
          <td><%= sales_target.product&.description || "-" %></td>
          <td><%= sales_target.monthly_target %></td>
          <td><%= l(sales_target.start_date, format: "%d/%m/%Y") %></td>
          <td><%= l(sales_target.end_date, format: "%d/%m/%Y") %></td>
          <td><%= link_to "Editar", edit_sales_target_path(sales_target), class: "action-button" %></td>
          <td>
            <% today  = Date.current
              start  = sales_target.start_date
              ending = sales_target.end_date %>
            <% if today < start %>
              ⚪️
            <% elsif today > ending %>
              🔴
            <% elsif today == ending %>
              🟠
            <% else %>
              🟢
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Produtos sem Meta de Venda</h2>

  <table class="index-table index-table--bordered">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Categoria</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      <% @products_without_sales_target.each do |product| %>
        <tr>
          <td><%= product.description %></td>
          <td><%= product.category&.name || "-" %></td>
          <td>
            <%= link_to "Criar",
                        new_sales_target_path(product_id: product.id),
                        class: "action-button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>