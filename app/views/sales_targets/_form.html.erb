<%= form_with(model: sales_target) do |f| %>
  <div class="field">
    <%= f.label :product_id, "Produto" %>
    <%= f.collection_select :product_id,
          Product.all,
          :id,
          :description,
          { prompt: "Selecione produto" },
          { class: "form-control" } %>
  </div>

  <div class="field">
    <%= f.label :total_fixed_cost, "Custo Fixo Total (R$)" %>
    <%= f.number_field :total_fixed_cost,
          class: "form-control",
          step: "0.01",
          readonly: true,
          value: FixedCost.sum(:monthly_cost) %>
  </div>

  <div class="field">
    <%= f.label :monthly_target, "Meta mensal (unidades)" %>
    <%= f.number_field :monthly_target,
          class: "form-control",
          step: 1,
          min: 1 %>
  </div>

  <div class="field">
    <%= f.label :start_date, "Data de inÃ­cio" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :end_date, "Data final" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "standart-button" %>
  </div>
<% end %>