<%= form_with(model: sales_target) do |f| %>
  <%= f.collection_select :package_id, Package.all, :id, :description, prompt: "Selecione pacote" %>
  <%= f.collection_select :channel_id, Channel.all, :id, :description, prompt: "Selecione canal" %>
  <%= f.number_field :monthly_target %>
  <%= f.date_field   :start_date %>
  <%= f.date_field   :end_date %>
  <%= f.submit %>
<% end %>