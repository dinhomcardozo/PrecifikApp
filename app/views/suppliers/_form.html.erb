<%= form_with(model: supplier, local: true) do |f| %>
  <div class="form-row">
    <div class="field">
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :cnpj, "CNPJ" %>
      <%= f.text_field :cnpj,
            class: "form-control",
            pattern: "\\d*",
            inputmode: "numeric",
            maxlength: 14,
            placeholder: "Somente números (14 dígitos)" %>
      <small class="form-text text-muted">O CNPJ deve ser preenchido com 14 números, sem pontos ou traços.</small>
    </div>
  </div>

  <div class="form-row">
    <div class="field">
      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :phone, "Telefone" %>
      <%= f.telephone_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="field">
      <%= f.label :address, "Endereço" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :number_address, "Número" %>
      <%= f.text_field :number_address,
            class: "form-control",
            pattern: "\\d*",
            inputmode: "numeric",
            placeholder: "Somente números" %>
    </div>
  </div>

  <div class="form-row">
    <div class="field">
      <%= f.label :city, "Cidade" %>
      <%= f.text_field :city, class: "form-control" %>
    </div>

  <div class="field">
    <%= f.label :state, "Estado" %>
    <%= f.select :state,
          options_for_select([
            ["AC - Acre", "AC"],
            ["AL - Alagoas", "AL"],
            ["AP - Amapá", "AP"],
            ["AM - Amazonas", "AM"],
            ["BA - Bahia", "BA"],
            ["CE - Ceará", "CE"],
            ["DF - Distrito Federal", "DF"],
            ["ES - Espírito Santo", "ES"],
            ["GO - Goiás", "GO"],
            ["MA - Maranhão", "MA"],
            ["MT - Mato Grosso", "MT"],
            ["MS - Mato Grosso do Sul", "MS"],
            ["MG - Minas Gerais", "MG"],
            ["PA - Pará", "PA"],
            ["PB - Paraíba", "PB"],
            ["PR - Paraná", "PR"],
            ["PE - Pernambuco", "PE"],
            ["PI - Piauí", "PI"],
            ["RJ - Rio de Janeiro", "RJ"],
            ["RN - Rio Grande do Norte", "RN"],
            ["RS - Rio Grande do Sul", "RS"],
            ["RO - Rondônia", "RO"],
            ["RR - Roraima", "RR"],
            ["SC - Santa Catarina", "SC"],
            ["SP - São Paulo", "SP"],
            ["SE - Sergipe", "SE"],
            ["TO - Tocantins", "TO"]
          ], f.object.state),
          { prompt: "Selecione o estado" },
          class: "form-select" %>
  </div>

  </div>

  <div>
    <%= f.submit "Criar Fornecedor", class: "standart-button" %>
  </div>
<% end %>