<% if Current.user_client.client.food_industry? %>
    <h4>Tabela Nutricional</h4>
    <div class="form-row-inline">
        <div class="field-inline">
        <%= f.label :total_fat, "Gorduras totais (g)", class: "custom-label" %>
        <%= f.number_field :total_fat, step: 0.01, class: "form-control", value: f.object.total_fat || 0  %>
        </div>

        <div class="field-inline">
        <%= f.label :protein, "Proteínas (g)", class: "custom-label" %>
        <%= f.number_field :protein, step: 0.01, class: "form-control", value: f.object.protein || 0  %>
        </div>

        <div class="field-inline">
        <%= f.label :carbs, "Carboidratos (g)", class: "custom-label" %>
        <%= f.number_field :carbs, step: 0.01, class: "form-control", value: f.object.carbs || 0  %>
        </div>
    </div>

    <div class="form-row-inline">
        <div class="field-inline">
        <%= f.label :dietary_fiber, "Fibras (g)", class: "custom-label" %>
        <%= f.number_field :dietary_fiber, step: 0.01, class: "form-control", value: f.object.dietary_fiber || 0  %>
        </div>

        <div class="field-inline">
        <%= f.label :sugars, "Açúcares (g)", class: "custom-label" %>
        <%= f.number_field :sugars, step: 0.01, class: "form-control", value: f.object.sugars || 0  %>
        </div>

        <div class="field-inline">
        <%= f.label :sodium, "Sódio (mg)", class: "custom-label" %>
        <%= f.number_field :sodium, step: 0.01, class: "form-control", value: f.object.sodium || 0  %>
        </div>
    </div>

    <div class="form-row-inline">
        <div class="field-inline">
            <%= f.label :calories, "Calorias (kcal)", class: "custom-label" %>
            <%= f.number_field :calories, step: 0.01, class: "form-control", value: f.object.calories || 0 %>
        </div>
    </div>
<% else %>
    <div class="detailed-box">
    <p>Se você é do segmento de produção de alimentos, pode ter acesso à <strong>Tabela Nutricional</strong>.</p>
    <p>
        Se deseja ativar, 
        <%= link_to "CLIQUE AQUI",
                    settings_path,
                    target: "_blank",
                    rel: "noopener noreferrer" %>
    </p>
    </div>
<% end %>