<table class="table">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Ativo</th>
      <th>Padrão</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tax_profiles.each do |profile| %>
      <tr>
        <td><%= profile.description %></td>
        <td><%= profile.active? ? "✔️" : "—" %></td>
        <td><%= profile.default? ? "✔️" : "—" %></td>
        <td><%= link_to "Ver", profile %></td>
        <td><%= link_to "Editar", edit_tax_profile_path(profile) %></td>
        <td><%= link_to "Excluir",
            tax_profile_path(profile),
            data: {
              "turbo-method":   :delete,
              "turbo-confirm":  "Tem certeza?"
            },
            class: "text-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>