<p>
  <strong>Descrição:</strong>
  <%= @tax_profile.description %>
</p>

<p>
  <strong>Ativo:</strong>
  <%= @tax_profile.active? ? "Sim" : "Não" %>
</p>

<p>
  <strong>Padrão:</strong>
  <%= @tax_profile.default? ? "Sim" : "Não" %>
</p>

<h5>Itens de Tributo</h5>
<table class="table table-sm">
  <thead>
    <tr>
      <th>Tributo</th>
      <th>Valor (%)</th>
      <th>Tipo</th>
    </tr>
  </thead>
  <tbody>
    <% @tax_profile.items.each do |item| %>
      <tr>
        <td><%= item.name.upcase %></td>
        <td><%= number_to_percentage(item.value, precision: 2) %></td>
        <td><%= item.tax_type.humanize %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Editar", edit_tax_profile_path(@tax_profile),
            class: "btn btn-primary" %>
<%= link_to "Voltar", tax_profiles_path,
            class: "btn btn-secondary ms-2" %>