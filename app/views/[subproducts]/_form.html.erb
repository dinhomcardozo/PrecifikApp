<!-- app/views/subproducts/_form.html.erb -->
<%= turbo_frame_tag "new_subproduct" do %>
  <%= form_with model: subproduct, data: { turbo_frame: "_top" } do |f| %>
    <h4 class="mb-3">Configurações do Subproduto</h4>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :name, "Nome do Subproduto" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.label :unit_of_measurement, "Unidade de Medida" %>
        <%= f.select :unit_of_measurement,
                     ['g', 'mL'],
                     {},
                     class: "form-select" %>
      </div>
      <div class="col-md-3">
        <%= f.label :brand_id, "Marca" %>
        <%= f.collection_select :brand_id,
                                Brand.all,
                                :id,
                                :name,
                                include_blank: true,
                                class: "form-select" %>
      </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
      <%= f.submit "Salvar", class: "standart-button" %>
    </div>
  <% end %>
<% end %>