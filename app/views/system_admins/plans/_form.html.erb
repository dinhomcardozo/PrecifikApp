<%= form_with(model: system_admins_plan) do |form| %>
  <% if system_admins_plan.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(system_admins_plan.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul>
        <% system_admins_plan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, "Descrição", style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :price, "Preço", style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :status, "Ativo?", style: "display: block" %>
    <%= form.check_box :status %>
  </div>

  <% if current_user_admin&.super_admin? %>
    <div>
      <%= form.label :super_admin, "Super Admin?", style: "display: block" %>
      <%= form.check_box :super_admin %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>