<h2>Editar SystemAdmin</h2>

<%= form_for(resource,
             as: resource_name,
             url: user_admin_registration_path,
             html: { method: :put }) do |f| %>

  <%= render "user_admins/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em>(m√≠nimo <%= @minimum_password_length %> caracteres)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>

<%= render "user_admins/shared/links" %>